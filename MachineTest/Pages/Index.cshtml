@page
@model IndexModel

<div>
    <h2>Home Security Control</h2>
    <p>status: <label asp-for="MachineStatus">@Model.MachineStatus</label></p>
    <form>
        <div class="form-group" hidden=@Model.InputCodeVisible>
            <label for="pwd">Code:</label>
            <input type="password" asp-for="Code" class="form-control" id="pwd">
        </div>
        <div class="form-group">
            <div id="buttons">
                <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("IoTArm", "this")'">Arm</button>
                <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("IoTDisarm", "this")'">Disarm</button>
            </div>
        </div>
    </form>
</div>
